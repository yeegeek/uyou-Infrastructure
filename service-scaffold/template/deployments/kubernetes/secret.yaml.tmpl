apiVersion: v1
kind: Secret
metadata:
  name: {{.ServiceName}}-secret
  namespace: {{ .Namespace | default "default" }}
  labels:
    app: {{.ServiceName}}-service
type: Opaque
stringData:
  {{if .UsePostgreSQL}}# 数据库凭证
  database.user: "postgres"
  database.password: "CHANGE_ME_IN_PRODUCTION"
  {{end}}

  # Redis 凭证
  redis.password: ""

  # JWT 密钥
  jwt.secret: "CHANGE_ME_IN_PRODUCTION"

  # API 密钥
  api.key: "CHANGE_ME_IN_PRODUCTION"
